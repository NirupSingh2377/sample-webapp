pipeline {
    agent any
    stages {
        stage("Build") {
            steps {
                echo "Build stage"
                sh "your-build-command-here"
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploy stage"
                sh "your-deploy-command-here"
            }
        }
        stage("Test") {
            steps {
                echo "Test stage"
                sh "your-test-command-here"
            }
        }
    }
}
