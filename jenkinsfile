pipeline {
    agent any
    
    environment {
        PATH = "/usr/bin:$PATH"
        AWS_ACCOUNT_ID = '390403869878'
        AWS_REGION = 'us-east-1'
        ECR_REPO = 'sample-webapp'
        IMAGE_TAG = 'latest'
        DOCKER_IMAGE = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/NirupSingh2377/sample-webapp.git'
            }
        }
        
        stage('Login to AWS ECR') {
            steps {
                script {
                    sh "/usr/local/bin/aws ecr get-login-password --region ${AWS_REGION} | /usr/bin/docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh "/usr/bin/docker build -t ${DOCKER_IMAGE} ."
            }
        }
        
        stage('Push to AWS ECR') {
            steps {
                sh "/usr/bin/docker push ${DOCKER_IMAGE}"
            }
        }
    }
}
